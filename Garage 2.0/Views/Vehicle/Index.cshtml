<div class="container">
<div class="row my-3">
    <div class="col-5"></div>
<div class="col-2 mt-3">    
    <div class="card rounded-3 sectioncolors p-2">
    <h6>Available spaces: @ViewData["NrOfAvailableSlots"]</h6>
    <h6>Vehicles in garage: @Model.Count()</h6> </div>
</div>
</div>
<div class="row my-3">
    <div class="col-3"></div>
<div class="col-6 text-center">
    <h3 class="text-white"><br />Welcome to Garage Stockholm</h3><br /><br /><h4 class="text-white">If you are already a member please start your parking</h4>
    </div>
    </div>
<div class="row my-3">
<div class="col-4"></div>
<div class="col-4 text-center">
<a asp-action="Create" class="btn btn-secondary rounded-3 parkbutton p-2">Park your vehicle</a>
</div>
</div>
<div class="row mt-3">
    <div class="col-3"></div>
<div class="col-6 text-center">
    <br /><h5 class="text-white">Not a member?</h5>
    </div>
    </div>
<div class="row">
<div class="col-5"></div>
<div class="col-2 text-center">
<a a class="btn btn-secondary rounded-3 p-2" asp-area="" asp-controller="Users" asp-action="Create">Register now!</a>
</div>
</div>

@if(TempData["Message"] != null)
{
    <div id="div" class="alert alert-success my-3 text-center">@TempData["Message"]</div>
}

</div>
</div>
